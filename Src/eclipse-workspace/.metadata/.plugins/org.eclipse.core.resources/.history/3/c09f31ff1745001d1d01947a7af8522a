package Brute_Force;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;

public class S5_1436_2 {
	private static BufferedReader sc = new BufferedReader(new InputStreamReader(System.in));
	private static StringBuilder sb = new StringBuilder();
	
	public static void main(String[] args) throws IOException {
		int N = Integer.parseInt(sc.readLine());
		solve(N);
		
		System.out.println(sb);
	}
	
	public static void solve(int n) {
		int count = 1;
		int digit = 0; // 선수 자릿수
		int num = 0;		// 선수 자릿수를 제외한 나머지 뒷 자릿수
		
		/*
		 
		   설명 표현 방법
		   '_'(언더바)를 기준으로 표현한다.  ex) (digit) _ num
		   이 때, 자릿수에 따라서 num 은 0 또는 600, 660, 666 을 갖는다.
		   
		 */
		while (true) {
 
			// 선수 자릿수가 X...666 일 경우 (ex. 666_000, 1666_004, ...)
			else if (digit % 1000 == 666) {
				for (int i = 0; i < 1000; i++) {
 
					if (count == n) {
						System.out.print(digit * 1000 + i);
						return;
					}
					count++;
					num++;
				}
				digit++;
			}
 
			// 선수 자릿수가 X...66 일 경우 (ex. 66_600, 166_600, ...)
			else if (digit % 100 == 66) {
				num = 600;
				for (int i = 0; i < 100; i++) {
					if (count == n) {
						System.out.print(digit * 1000 + num);
						return;
					}
					count++;
					num++;
				}
				digit++;
 
			}
 
			
			// 선수 자릿수가 X...6 일 경우 (ex. 6_660, 16_663, ...) 
			else if (digit % 10 == 6) {
				num = 660;
				for (int i = 0; i < 10; i++) {
					if (count == n) {
						System.out.print(digit * 1000 + num);
						return;
					}
					num++;
					count++;
				}
				digit++;
			} 
			
			// 그 외의 경우 (ex. 241_666, 23_666 ...)
			else {
				num = 666;
				if (count == n) {
					System.out.print(digit * 1000 + num);
					return;
				}
				count++;
				digit++;
 
			}
		}
	}
}